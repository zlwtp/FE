        <script>
            if (location.hostname.indexOf('2haohr.com') > -1 && location.protocol == 'http:') {
                // 处理https强制跳转
                location.protocol = 'https:'
            }
            if (location.hostname === 'www.2haohr.com') {
                location.hostname = '2haohr.com'
            }
        </script>
        <link
            rel="shortcut icon"
            href="https://pub-cdn.2haohr.com/share/imgs/2017/favicon-business2.ico"
            type="image/x-icon"
        />
        <!--[if lte IE 9
            ]><script>
                location.href = '/unsupport-browser.html'
            </script><!
        [endif]-->
        <style>
            :root {
                --special-topbar: linear-gradient(to right, #006946, #007d5f);
                --primary: #0bb27a;
                --select: #59c993;
                --light: #b4e7d4;
                --shade-1: rgb(10, 169, 116);
                --shade-2: rgb(10, 160, 110);
                --alpha-1: rgba(11, 178, 122, 0.2);
                --alpha-2: rgba(11, 178, 122, 0.9);
                --tint-1: rgb(35, 186, 135);
                --tint-2: rgb(60, 193, 149);
                --tint-3: rgb(84, 201, 162);
                --tint-4: rgb(109, 209, 175);
                --tint-5: rgb(133, 217, 189);
                --tint-6: rgb(157, 224, 202);
                --tint-7: rgb(182, 232, 215);
                --tint-8: rgb(206, 240, 228);
                --tint-9: rgb(231, 247, 242);
            }
            @keyframes bsload-animate {
                50% {
                    transform: rotate(360deg) scale(0.8);
                }
            }
            #app {
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: #fff;
                z-index: 1000000;
            }
            #app > div {
                width: 100%;
                height: 100%;
                position: relative;
            }
            #app > div > div {
                position: absolute;
                left: 50%;
                top: 50%;
                height: 200px;
                width: 200px;
                margin-top: -100px;
                margin-left: -100px;
                transform: rotate(-135deg);
            }
            .bsload {
                border-radius: 50% 50% 50% 50%;
                position: absolute;
                border-top: 2px solid #5cadff;
                border-left: 2px solid #5cadff;
                border-bottom: 2px solid transparent;
                border-right: 2px solid transparent;
                animation: bsload-animate 2s infinite;
            }
            .bsload.bsload1 {
                left: 55px;
                top: 55px;
                width: 90px;
                height: 90px;
                animation-delay: 0.4s;
                border-top: 2px solid #2d8cf0;
                border-left: 2px solid #2d8cf0;
            }
            .bsload.bsload2 {
                left: 65px;
                top: 65px;
                width: 70px;
                height: 70px;
                animation-delay: 0.2s;
                border-top: 2px solid #0bb27a;
                border-left: 2px solid #0bb27a;
            }
            .bsload.bsload3 {
                left: 75px;
                top: 75px;
                width: 50px;
                height: 50px;
                border-top: 2px solid #f90;
                border-left: 2px solid #f90;
            }
        </style>
        <script>
            window.version = '<%= htmlWebpackPlugin.options.tps.version %>'
        </script>
    </head>

    <body>
        <div id="app">
            <div>
                <div>
                    <div class="bsload bsload1"></div>
                    <div class="bsload bsload2"></div>
                    <div class="bsload bsload3"></div>
                </div>
            </div>
        </div>
        <% htmlWebpackPlugin.options.cdn.forEach(item => { %>
        <script type="text/javascript" src="<%= item %>"></script>
        <% }) %>

        <!-- front-app-insert -->
        <!-- front-bootstrap-layout-insert -->
        <!-- front-bootstrap-app-insert -->
        <!-- front-bootstrap-assist-insert -->
    </body>
</html>
